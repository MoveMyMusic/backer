# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /teachers                   controllers.Teachers.getAll
GET     /teachers/:id               controllers.Teachers.get(id: Long)
PUT     /teachers/:id               controllers.Teachers.put(id: Long)
POST    /teachers                   controllers.Teachers.post

GET     /students                   controllers.Students.getAll
GET     /students/:id               controllers.Students.get(id: Long)
PUT     /students/:id               controllers.Students.put(id: Long)
POST    /students                   controllers.Students.post

GET     /students/:id/teachers      controllers.Students.getTeachers(id: Long)
PUT     /students/:id/teachers      controllers.Students.putTeachers(id: Long)
DELETE  /students/:studentId/teachers/:teacherId      controllers.Students.delTeachers(studentId: Long, teacherId: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
